<div class="row text-center">
    <img src="../assets/img/burger.png" alt="burger">
    <h1>Eat-Da-Burger!</h1>
</div>

<div class="row">
  <div class="col-md-6">
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        {{burger_name}}
        <button class="devour_burger" data-id="{{this.id}}">Devour It!</button>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-md-6">
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li>
        {{burger_name}}
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>

</div>


<div class="row">
  <div class="text-center">
    <form class="create-form">

      <div class="form-group">
        <textarea class="form-control" rows="3" id="burgerDescription">
        </textarea>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
      <p>Enter a burger you want to eat and click the "Submit" button</p>
    </form>
  </div>
</div>